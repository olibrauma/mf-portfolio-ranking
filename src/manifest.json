{
    "manifest_version": 3,
    "name": "MF Portfolio Ranking",
    "version": "1.0",
    "author": "olibrauma",
    "description": "マネーフォワードの資産内訳をランキング形式で表示します。",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://moneyforward.com/bs/portfolio*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "mf-portfolio-ranking@olibrauma.com",
            "strict_min_version": "109.0"
        }
    },
    "data_collection_permissions": {
        "is_opt_in_required": false,
        "is_data_collection_policy_required": false
    },
    "icons": {
        "32": "icons/32.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    }
}